<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="getname.group.project_4">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activities.ChartMenuActivity"></activity>
        <activity android:name=".activities.NoteActivity"></activity>
        <activity android:name=".activities.CalenderActivity"></activity>

        <activity android:name=".charts.BarChart"></activity>
        <activity android:name=".charts.GroupedBarChart"></activity>
        <activity android:name=".charts.LineChart"></activity>
        <activity android:name=".charts.PieChart"></activity>
    </application>

    <uses-sdk android:minSdkVersion="14" />
    <uses-permission android:name="android.permission.READ_CALENDAR" />
    <uses-permission android:name="android.permission.WRITE_CALENDAR" />

</manifest>